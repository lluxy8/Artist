@model FooterViewModel

<!-- Footer -->
<footer>
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
            <!-- Logo & Description -->
            <div>
                <div class="logo-text">@Model.Settings.CompanyName</div>
                <p class="footer-description">@Model.Settings.CreateDate</p>
                <div class="social-links">
                    @if (Model.Socials != null && Model.Socials.Any())
                    {
                        foreach (var i in Model.Socials)
                        {
                            <a href="@i.Url" class="social-link">
                                <i class="fab fa-@i.Name.ToLower() text-2xl text-gray-200"></i>
                            </a>
                        }
                    }
                </div>
            </div>

            <!-- Explore -->
            <div>
                <h3 class="footer-title">Keşfet</h3>

                <ul class="footer-links">
                    @if (Model.Projects != null && Model.Projects.Any())
                    {
                        @foreach (var i in Model.Projects)
                        {
                            <li><a href="#">@i.DisplayName</a></li>
                        }
                    }
                </ul>
            </div>

            <!-- Categories -->
            <div>
                <h3 class="footer-title">Kategoriler</h3>
                <ul class="footer-links">
                    @foreach(var i in Model.Categories)
                    {
                        <li><a href="#">@i.DisplayName</a></li>
                    }
                </ul>
            </div>

            <!-- Contact Info -->
            <div>
                <h3 class="footer-title">İletişim Bilgileri</h3>
                <ul class="footer-links">
                    <li>
                        <a href="@Model.Settings.Email" class="flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                            @Model.Settings.Email
                        </a>
                    </li>
                    <li>
                        <a href="tel:@Model.Settings.PhoneNumber" class="flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                            </svg>
                            @Model.Settings.PhoneNumber
                        </a>
                    </li>
                    <li>
                        <a href="#" class="flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            @Model.Settings.Address
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="copyright">
        Telif Hakkı © @DateTime.UtcNow.Year @Model.Settings.CompanyName ~ Tüm Hakları Saklıdır.
    </div>
</footer>