@model List<PagesNavViewModel>

<!-- Header -->
<header class="header-nav">
    <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
        <div class="flex items-center">
            <img src="@ViewBag.logoUrl" alt="Artist Logo" class="h-12" width="120" height="40">
        </div>
        <!-- Desktop Navigation -->
        <ul class="desktop-nav hidden md:flex space-x-8">
            @foreach(var i in Model)
            {
                <li>
                    <a href="/p/@i.UrlName" class="nav-link">@i.DisplayName</a>
                </li>
            }
            <li>
                <a href="#" class="relative text-white hover:text-[var(--primary-color)] transition-colors">
                    <span class="absolute -top-2 -right-2 bg-[var(--primary-color)] text-white rounded-full w-5 h-5 flex items-center justify-center text-xs">3</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                </a>
            </li>
        </ul>
        <!-- Hamburger Menu -->
        <div class="hamburger-menu md:hidden">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </nav>
</header>

<div class="overlay"></div>
<div class="sidebar">
    <div class="sidebar-close">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </div>
    <div class="mobile-nav-links">
        <a href="index.html" class="mobile-nav-link"><i class="fas fa-home"></i> Ana Sayfa</a>
        <a href="about.html" class="mobile-nav-link"><i class="fas fa-info-circle"></i> Hakkımızda</a>
        <a href="exhibition.html" class="mobile-nav-link"><i class="fas fa-palette"></i> Sergiler</a>
        <a href="contact.html" class="mobile-nav-link"><i class="fas fa-envelope"></i> İletişim</a>
    </div>
</div>