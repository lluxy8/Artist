@model PageContentViewModel

<section class="py-20">
    <div class="container mx-auto px-4 grid md:grid-cols-2 gap-12 items-center">
        <div class="experience-card portfolio-item">
            <img src="@Model.ImageUrl" class="rounded-lg shadow-xl w-full">
        </div>
        <div class="space-y-6">
            <p class="text-[var(--primary-color)]">@Html.Raw(Model.Text1)</p>
            <h2 class="text-4xl section-title">@Html.Raw(Model.Text2)</h2>
            <p class="text-gray-600">@Html.Raw(Model.Text3)</p>           
        </div>
    </div>
</section>