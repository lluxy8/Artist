@model IletisimPageViewModel
@{
    ViewData["Title"] = "İletişim";
    ViewData["PageUrl"] = "Iletisim";
}

@await Component.InvokeAsync("PageContent", ViewData["PageUrl"])

<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="contact-info-card text-center">
                    <div class="contact-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <h4>Konum</h4>
                    <p>@Model.Address</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-info-card text-center">
                    <div class="contact-icon">
                        <i class="fas fa-phone-alt"></i>
                    </div>
                    <h4>Telefon</h4>
                    <p>@Model.PhoneNumber</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-info-card text-center">
                    <div class="contact-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <h4>E-posta</h4>
                    <p>@Model.Email</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="map-section">
    <div class="container-fluid p-0">
        <iframe src="@Model.AddressGoogleMaps"
                width="100%"
                height="450"
                style="border:0;"
                allowfullscreen="">
        </iframe>
    </div>
</section>
