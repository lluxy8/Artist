@model CategoryUpdateDto
@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "_AdminLayout";
}

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800 dark:text-white">Kategori Düzenle</h1>
        <p class="text-gray-600 dark:text-gray-300 mt-2">Kategori bilgilerini güncelleyin.</p>
    </div>

    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreateDate" />
        <input type="hidden" asp-for="UpdateDate" />
        <input type="hidden" asp-for="ImageUrl"/>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="group">
                <label asp-for="DisplayName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">Kategori Adı</label>
                <div class="relative mt-1">
                    <input asp-for="DisplayName" class="block w-full border border-gray-300 dark:border-gray-700 rounded-lg py-2.5 px-4
                        bg-white dark:bg-gray-900 text-gray-900 dark:text-white
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70 dark:hover:border-primary-400
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 dark:placeholder-gray-500 text-sm
                        shadow-sm" />
                    <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
                </div>
                <span asp-validation-for="DisplayName" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="group">
                <label asp-for="UrlName" class="block text-sm font-medium text-gray-700 dark:text-gray-300">URL Adı</label>
                <div class="relative mt-1">
                    <input readonly asp-for="UrlName" type="text"
                           class="block w-full border border-gray-200 dark:border-gray-700 rounded-lg py-2.5 px-4
                   bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400
                   cursor-not-allowed select-none
                   text-sm shadow-sm transition-colors duration-200" />
                </div>
                <span asp-validation-for="UrlName" class="text-red-500 text-xs mt-1"></span>
            </div>

            
            <div class="group">
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">Açıklama</label>
                <div class="relative mt-1">
                    <textarea asp-for="Description" rows="3" class="block w-full border border-gray-300 dark:border-gray-700 rounded-lg py-2.5 px-4
                        bg-white dark:bg-gray-900 text-gray-900 dark:text-white
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70 dark:hover:border-primary-400
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 dark:placeholder-gray-500 text-sm
                        shadow-sm"></textarea>
                    <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
                </div>
                <span asp-validation-for="Description" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="group">
                <label asp-for="Image" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">Görsel</label>
                <div class="mt-1 flex items-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.DisplayName" class="h-20 w-20 object-cover rounded-lg shadow-sm mr-4 transition-transform duration-300 hover:scale-105" />
                    }
                    <div class="flex-1">
                        <input type="file" asp-for="Image" class="block w-full text-sm text-gray-500 dark:text-gray-400
                            file:mr-4 file:py-2.5 file:px-4 file:rounded-lg file:border-0
                            file:text-sm file:font-medium file:bg-primary-50 dark:file:bg-primary-900 file:text-primary-700 dark:file:text-primary-300
                            hover:file:bg-primary-100 dark:hover:file:bg-primary-800
                            file:cursor-pointer
                            file:transition-all file:duration-300 file:ease-in-out
                            file:shadow-sm
                            file:focus:outline-none file:focus:ring-2 file:focus:ring-primary-500/50" />
                    </div>
                </div>
                <span asp-validation-for="Image" class="text-red-500 text-xs mt-1"></span>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Önerilen boyut: 300x300 piksel</p>
            </div>

            <div class="group flex items-center">
                <div class="relative">
                    <input asp-for="IsHighlighted" class="peer h-5 w-5 text-primary-600
                            focus:ring-2 focus:ring-primary-500/50 focus:ring-offset-2
                            border-gray-300 dark:border-gray-700 rounded-md cursor-pointer
                            transition-all duration-300 ease-in-out
                            hover:border-primary-400/70 dark:hover:border-primary-400/70
                            checked:bg-primary-600 checked:border-primary-600
                            checked:hover:bg-primary-700 dark:checked:bg-primary-700 dark:checked:border-primary-700
                            dark:checked:hover:bg-primary-800" />
                    <div class="absolute inset-0 rounded-md transition-all duration-300 ease-in-out pointer-events-none peer-hover:ring-2 peer-hover:ring-primary-500/20"></div>
                </div>
                <label asp-for="IsHighlighted" class="ml-2 block text-sm text-gray-700 dark:text-gray-300 cursor-pointer group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-200">Öne Çıkart</label>
            </div>
        </div>

        <div class="mt-6 flex justify-end space-x-3">
            <a asp-action="Index" class="inline-flex items-center px-4 py-2.5 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-900
                hover:bg-gray-50 dark:hover:bg-gray-800 hover:border-gray-400 dark:hover:border-gray-600
                focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500/50
                transition-all duration-300 ease-in-out">
                <i class="fas fa-arrow-left mr-2"></i>
                Listeye Dön
            </a>
            <button type="submit" class="inline-flex items-center px-4 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-primary-600
                hover:bg-primary-700 hover:shadow-md
                focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500/50
                transition-all duration-300 ease-in-out
                active:bg-primary-800 active:shadow-sm">
                <i class="fas fa-save mr-2"></i>
                Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        const displayNameInput = document.getElementById('DisplayName');
        const urlNameInput = document.getElementById('UrlName');

        displayNameInput.addEventListener('input', function () {
            const slug = slugify(displayNameInput.value);
            urlNameInput.value = slug;
        });
    </script>

}
