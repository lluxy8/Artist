@model Core.Entities.Project
@{
    ViewData["Title"] = "Proje Sil";
    Layout = "_AdminLayout";
}

<div class="bg-white rounded-lg shadow-md p-6">
    <div class="mb-6">
        <div class="bg-red-50 border-l-4 border-red-500 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-exclamation-triangle text-red-500"></i>
                </div>
                <div class="ml-3">
                    <h3 class="text-red-800 font-medium">Dikkat!</h3>
                    <p class="text-red-700">Bu projeyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700">Proje Adı</label>
                <p class="mt-1 text-gray-900">@Model.Name</p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Kategori</label>
                <p class="mt-1 text-gray-900">@Model.Category?.DisplayName</p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Açıklama</label>
                <p class="mt-1 text-gray-900">@Model.Description</p>
            </div>
        </div>

        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700">Öne Çıkan</label>
                <div class="mt-1">
                    @if (Model.IsHighlighted)
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            Evet
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            Hayır
                        </span>
                    }
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Görünür</label>
                <div class="mt-1">
                    @if (Model.IsVisible)
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            Evet
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            Hayır
                        </span>
                    }
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Oluşturulma Tarihi</label>
                <p class="mt-1 text-gray-900">@Model.CreateDate.ToString("dd/MM/yyyy HH:mm")</p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Son Güncelleme</label>
                <p class="mt-1 text-gray-900">@(Model.UpdateDate != default ? Model.UpdateDate.ToString("dd/MM/yyyy HH:mm") : "-")</p>
            </div>
        </div>
    </div>

    <form asp-action="Delete" class="mt-6">
        <input type="hidden" asp-for="Id" />
        <div class="flex justify-end space-x-3">
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                <i class="fas fa-times mr-2"></i>
                İptal
            </a>
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                <i class="fas fa-trash mr-2"></i>
                Sil
            </button>
        </div>
    </form>
</div> 