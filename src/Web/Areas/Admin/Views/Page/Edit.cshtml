@model Core.Entities.Page
@{
    ViewData["Title"] = "Sayfa Düzenle";
    Layout = "_AdminLayout";
}

<div class="bg-white rounded-lg shadow-md p-6">
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Sayfa Düzenle</h1>
        <p class="text-gray-600 mt-2">Sayfa bilgilerini düzenleyin.</p>
    </div>

    <form asp-action="Edit" method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50" role="alert"></div>
        <input type="hidden" asp-for="Id" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="group">
                <label asp-for="DisplayName" class="block text-sm font-medium text-gray-700 group-hover:text-primary-600 transition-colors duration-200">Sayfa Adı</label>
                <div class="relative mt-1">
                    <input asp-for="DisplayName" class="block w-full border border-gray-300 rounded-lg py-2.5 px-4 
                        bg-white text-gray-900
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 text-sm
                        shadow-sm" />
                    <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
                </div>
                <span asp-validation-for="DisplayName" class="mt-1 text-sm text-red-600"></span>
            </div>

            <div class="group">
                <label asp-for="UrlName" class="block text-sm font-medium text-gray-700 group-hover:text-primary-600 transition-colors duration-200">URL Adı</label>
                <div class="relative mt-1">
                    <input asp-for="UrlName" class="block w-full border border-gray-300 rounded-lg py-2.5 px-4 
                        bg-white text-gray-900
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 text-sm
                        shadow-sm" />
                    <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
                </div>
                <span asp-validation-for="UrlName" class="mt-1 text-sm text-red-600"></span>
                <p class="mt-1 text-sm text-gray-500">URL'de kullanılacak benzersiz ad (örn: web-tasarim)</p>
            </div>
        </div>

        <div class="flex justify-end space-x-3 mt-6">
            <a asp-action="Index" class="inline-flex items-center px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white 
                hover:bg-gray-50 hover:border-gray-400
                focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500/50
                transition-all duration-300 ease-in-out">
                <i class="fas fa-times mr-2"></i>
                İptal
            </a>
            <button type="submit" class="inline-flex items-center px-4 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-primary-600 
                hover:bg-primary-700 hover:shadow-md
                focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500/50
                transition-all duration-300 ease-in-out
                active:bg-primary-800 active:shadow-sm">
                <i class="fas fa-save mr-2"></i>
                Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 