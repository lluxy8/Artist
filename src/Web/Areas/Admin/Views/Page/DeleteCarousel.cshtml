@model Core.Entities.PageCarousel
@{
    ViewData["Title"] = "Carousel Sil";
    Layout = "_AdminLayout";
}

<div class="bg-white rounded-lg shadow-md p-6">
    <div class="mb-6">
        <div class="bg-red-50 border-l-4 border-red-500 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-exclamation-triangle text-red-500"></i>
                </div>
                <div class="ml-3">
                    <h3 class="text-red-800 font-medium">Dikkat!</h3>
                    <p class="text-red-700">Bu carousel'i silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700">Metin 1</label>
                <p class="mt-1 text-gray-900">@Model.Text1</p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Metin 2</label>
                <p class="mt-1 text-gray-900">@Model.Text2</p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Metin 3</label>
                <p class="mt-1 text-gray-900">@Model.Text3</p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Resim</label>
                <div class="mt-1">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Carousel Resmi" class="max-w-xs rounded-lg shadow-sm" />
                    }
                    else
                    {
                        <span class="text-gray-500">Resim yok</span>
                    }
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Oluşturulma Tarihi</label>
                <p class="mt-1 text-gray-900">@Model.CreateDate.ToString("dd/MM/yyyy HH:mm")</p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Son Güncelleme</label>
                <p class="mt-1 text-gray-900">@(Model.UpdateDate != default ? Model.UpdateDate.ToString("dd/MM/yyyy HH:mm") : "-")</p>
            </div>
        </div>
    </div>

    <form asp-action="DeleteCarousel" class="mt-6">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="PageContentId" />
        <div class="flex justify-end space-x-3">
            <a asp-action="Carousel" asp-route-pageid="@ViewBag.PageId" asp-route-pageContentId="@Model.PageContentId" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                <i class="fas fa-times mr-2"></i>
                İptal
            </a>
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                <i class="fas fa-trash mr-2"></i>
                Sil
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 