@model PageContentUpdateDto
@{
    ViewData["Title"] = "Sayfa İçeriği Düzenle";
    Layout = "_AdminLayout";
}

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800 dark:text-white">Sayfa İçeriği Düzenle</h1>
        <p class="text-gray-600 dark:text-gray-300 mt-2">Sayfanın içeriğini düzenleyin.</p>
    </div>

    <form asp-action="Content" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="PageId" />
        
        
        <div class="group">
            <label asp-for="Title" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">Başlık</label>
            <div class="relative mt-1">
                <input asp-for="Title" class="block w-full border border-gray-300 dark:border-gray-700 rounded-lg py-2.5 px-4
                        bg-white dark:bg-gray-900 text-gray-900 dark:text-white
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70 dark:hover:border-primary-400
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 dark:placeholder-gray-500 text-sm
                        shadow-sm" />
                <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
            </div>
            <span asp-validation-for="Title" class="text-red-500 text-xs mt-1"></span>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="group">
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">Açıklama</label>
                <div class="relative mt-1">
                    <textarea asp-for="Description" rows="3" class="block w-full border border-gray-300 dark:border-gray-700 rounded-lg py-2.5 px-4
                        bg-white dark:bg-gray-900 text-gray-900 dark:text-white
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70 dark:hover:border-primary-400
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 dark:placeholder-gray-500 text-sm
                        shadow-sm"></textarea>
                    <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
                </div>
                <span asp-validation-for="Description" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>

        <div class="mt-6 flex justify-between items-center">
            <div class="flex space-x-3">
                <a asp-controller="PageSection" asp-action="Index" asp-route-pageId="@Model.PageId" asp-route-pcId="@Model.Id" class="inline-flex items-center px-4 py-2.5 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-900
                hover:bg-gray-50 dark:hover:bg-gray-800 hover:border-gray-400 dark:hover:border-gray-600
                focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500/50
                transition-all duration-300 ease-in-out">
                    <i class="fas fa-pager mr-2"></i>
                    Bölüm Yönetimi
                </a>
                <a asp-action="Carousel" asp-route-pageid="@Model.PageId" asp-route-pageContentId="@Model.Id" class="inline-flex items-center px-4 py-2.5 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-900
                hover:bg-gray-50 dark:hover:bg-gray-800 hover:border-gray-400 dark:hover:border-gray-600
                focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500/50
                transition-all duration-300 ease-in-out">
                    <i class="fas fa-images mr-2"></i>
                    Carousel Yönetimi
                </a>
            </div>

            <div class="flex space-x-3">
                <a asp-action="Index" class="inline-flex items-center px-4 py-2.5 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-900
                    hover:bg-gray-50 dark:hover:bg-gray-800 hover:border-gray-400 dark:hover:border-gray-600
                    focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500/50
                    transition-all duration-300 ease-in-out">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Listeye Dön
                </a>
                <button type="submit" class="inline-flex items-center px-4 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-primary-600
                    hover:bg-primary-700 hover:shadow-md
                    focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500/50
                    transition-all duration-300 ease-in-out
                    active:bg-primary-800 active:shadow-sm">
                    <i class="fas fa-save mr-2"></i>
                    Kaydet
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
