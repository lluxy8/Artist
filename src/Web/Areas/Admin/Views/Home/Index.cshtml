@model DashboardViewModel
@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "_AdminLayout";
}

<style>
    .rotate-icon {
    transition: transform 0.3s ease-in-out;
    }
    .group:hover .rotate-icon {
    transform: rotate(90deg);
    }
    .hover-lift {
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }
    .group:hover .hover-lift {
    transform: translateY(-4px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }
</style>

<div class="space-y-6">
    <div class="grid grid-cols-2 sm:grid-cols-1 gap-4">
        <!-- İstatistik Kartları -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-white dark:bg-gray-700 rounded-lg shadow-sm p-6 border-l-4 border-primary-500">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-primary-50 text-primary-600">
                            <i class="fas fa-folder text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-500 dark:text-gray-300">Toplam Kategori</p>
                            <p class="text-2xl font-semibold text-gray-900 dark:text-white">@Model.CategoryCount</p>
                        </div>
                    </div>
                    <div class="w-16 h-16 flex items-center justify-center">
                        <div class="w-12 h-12 rounded-full border-4 border-primary-100 flex items-center justify-center">
                            <span class="text-primary-600 font-semibold">@Model.CategoryCount</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-700 rounded-lg shadow-sm p-6 border-l-4 border-emerald-500">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-emerald-50 text-emerald-600">
                            <i class="fas fa-project-diagram text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-500 dark:text-gray-300">Toplam Proje</p>
                            <p class="text-2xl font-semibold text-gray-900 dark:text-white">@Model.ProjectCount</p>
                        </div>
                    </div>
                    <div class="w-16 h-16 flex items-center justify-center">
                        <div class="w-12 h-12 rounded-full border-4 border-emerald-100 flex items-center justify-center">
                            <span class="text-emerald-600 font-semibold">@Model.ProjectCount</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-700 rounded-lg shadow-sm p-6 border-l-4 border-rose-500">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-rose-50 text-rose-600">
                            <i class="fas fa-file-alt text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-500 dark:text-gray-300">Toplam Sayfa</p>
                            <p class="text-2xl font-semibold text-gray-900 dark:text-white">@Model.PageCount</p>
                        </div>
                    </div>
                    <div class="w-16 h-16 flex items-center justify-center">
                        <div class="w-12 h-12 rounded-full border-4 border-rose-100 flex items-center justify-center">
                            <span class="text-rose-600 font-semibold">@Model.PageCount</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-700 rounded-lg shadow-sm p-6 border-l-4 border-yellow-500">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-yellow-50 text-yellow-600">
                            <i class="fas fa-share-alt text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-500 dark:text-gray-300">Sosyal Medya</p>
                            <p class="text-2xl font-semibold text-gray-900 dark:text-white">@Model.SocialCount</p>
                        </div>
                    </div>
                    <div class="w-16 h-16 flex items-center justify-center">
                        <div class="w-12 h-12 rounded-full border-4 border-yellow-100 flex items-center justify-center">
                            <span class="text-yellow-600 font-semibold">@Model.SocialCount</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hızlı Erişim Butonları -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="group bg-gradient-to-br dark:from-primary-200 dark:to-primary-600 from-primary-50 to-primary-600 rounded-lg shadow-sm p-6 hover:shadow-md transition-all duration-300">
                <div class="flex items-center">
                    <div class="p-4 rounded-full bg-white text-primary-600 dark:bg-gray-600 transition-colors duration-300 hover-lift">
                        <i class="fas fa-plus text-xl rotate-icon text-primary-600 dark:text-primary-100"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-600 group-hover:text-primary-600 transition-colors duration-300">Yeni Kategori</p>
                        <p class="text-lg font-semibold text-gray-900 group-hover:text-primary-700">Ekle</p>
                    </div>
                </div>
            </a>

            <a asp-area="Admin" asp-controller="Project" asp-action="Create" class="group bg-gradient-to-br dark:from-emerald-200 dark:to-emerald-600 from-emerald-50 to-emerald-600 rounded-lg shadow-sm p-6 hover:shadow-md transition-all duration-300">
                <div class="flex items-center">
                    <div class="p-4 rounded-full bg-white text-emerald-600 dark:bg-gray-600 transition-colors duration-300 hover-lift">
                        <i class="fas fa-plus text-xl rotate-icon text-emerald-600 dark:text-emerald-100"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-600 group-hover:text-emerald-600 transition-colors duration-300">Yeni Proje</p>
                        <p class="text-lg font-semibold text-gray-900 group-hover:text-emerald-700">Ekle</p>
                    </div>
                </div>
            </a>

            <a asp-area="Admin" asp-controller="Page" asp-action="Create" class="group bg-gradient-to-br dark:from-rose-200 dark:to-rose-600 from-rose-50 to-rose-600 rounded-lg shadow-sm p-6 hover:shadow-md transition-all duration-300">
                <div class="flex items-center">
                    <div class="p-4 rounded-full bg-white text-rose-600 dark:bg-gray-600 transition-colors duration-300 hover-lift">
                        <i class="fas fa-plus text-xl rotate-icon text-rose-600 dark:text-rose-100"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-600 group-hover:text-rose-700 transition-colors duration-300">Yeni Sayfa</p>
                        <p class="text-lg font-semibold text-gray-900 group-hover:text-rose-800">Ekle</p>
                    </div>
                </div>
            </a>

            <a asp-area="Admin" asp-controller="Social" asp-action="Create" class="group bg-gradient-to-br dark:from-yellow-200 dark:to-yellow-600 from-yellow-50 to-yellow-600 rounded-lg shadow-sm p-6 hover:shadow-md transition-all duration-300">
                <div class="flex items-center">
                    <div class="p-4 rounded-full bg-white text-yellow-600 dark:bg-gray-600 transition-colors duration-300 hover-lift">
                        <i class="fas fa-plus text-xl rotate-icon text-yellow-600 dark:text-yellow-100"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-600 group-hover:text-yellow-600 transition-colors duration-300">Yeni Sosyal Medya</p>
                        <p class="text-lg font-semibold text-gray-900 group-hover:text-yellow-700">Ekle</p>
                    </div>
                </div>
            </a>
        </div>
    </div>


    <!-- Son Aktiviteler -->
    <div class="grid grid-cols-2 gap-3">
        <!-- Girişler -->
        <div class="bg-white dark:bg-gray-700 rounded-lg shadow-sm p-6">
            <div class="flex items-center justify-between mb-6">
                <div class="">
                    <div class="flex gap-2">
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Son Girişler</h2>
                        <i class="fa-solid fa-right-to-bracket text-lg"></i>
                    </div>
                    <p class="text-sm font-semibold text-gray-500">Son 24 Saat: @Model.LoginCountToday</p>                 
                </div>
                <a href="#" class="text-sm font-medium text-primary-600 hover:text-primary-700">Tümünü Gör</a>
            </div>

            <div class="space-y-4">
                @if (Model.LoginAttempts.Any())
                {
                    foreach (var i in Model.LoginAttempts)
                    {
                        <div class="flex items-start p-4 bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-md transition-shadow">
                            <div class="flex-shrink-0">
                                @if (i.Success)
                                {
                                    <div class="flex items-center justify-center w-12 h-12 rounded-full bg-emerald-100 dark:bg-emerald-700">
                                        <i class="fa-solid fa-check text-emerald-600 dark:text-emerald-200 text-lg"></i>
                                    </div>
                                }
                                else
                                {
                                    <div class="flex items-center justify-center w-12 h-12 rounded-full bg-rose-100 dark:bg-rose-700">
                                        <i class="fa-solid fa-xmark text-rose-600 dark:text-rose-200 text-lg"></i>
                                    </div>
                                }
                            </div>
                            <div class="ml-4 flex-1">
                                <p class="text-sm font-medium text-gray-900 dark:text-white">
                                    @i.Location Konumundan
                                </p>
                                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                    @DateTimeHelper.ConvertToTurkeyTime(i.CreateDate).ToString("dd MMM yyyy HH:mm")
                                </p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-sm text-gray-500 dark:text-gray-300">Henüz aktivite bulunmuyor.</p>
                }
            </div>
        </div>

        <!-- Loglar -->
        <div class="bg-white dark:bg-gray-700 rounded-lg shadow-sm p-6">
            <div class="flex items-center justify-between mb-6">
                <div class="">
                    <div class="flex gap-2">
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Son İşlemler</h2>
                        <i class="fa-solid fa-clock-rotate-left text-lg"></i>
                    </div>
                    <p class="text-sm font-semibold text-gray-500">Son 24 Saat: @Model.LogCountToday</p>
                </div>
                <a href="#" class="text-sm font-medium text-primary-600 hover:text-primary-700">Tümünü Gör</a>
            </div>


            <div class="space-y-4">
                @if (Model.Logs.Any())
                {
                    foreach (var i in Model.Logs)
                    {
                        <div class="flex items-start p-4 bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-md transition-shadow">
                            <div class="flex-shrink-0">
                                @switch ((LogType)i.Type)
                                {
                                    case LogType.Update:
                                        <div class="flex items-center justify-center w-12 h-12 rounded-full bg-yellow-100 dark:bg-yellow-700">
                                            <i class="fa-solid fa-pen text-yellow-600 dark:text-yellow-200 text-lg"></i>
                                        </div>
                                        break;

                                    case LogType.Create:
                                        <div class="flex items-center justify-center w-12 h-12 rounded-full bg-green-100 dark:bg-green-700">
                                            <i class="fa-solid fa-plus text-green-600 dark:text-green-200 text-lg"></i>
                                        </div>
                                        break;

                                    case LogType.Delete:
                                        <div class="flex items-center justify-center w-12 h-12 rounded-full bg-red-100 dark:bg-red-700">
                                            <i class="fa-solid fa-trash text-red-600 dark:text-red-200 text-lg"></i>
                                        </div>
                                        break;

                                    case LogType.Authorize:
                                        <div class="flex items-center justify-center w-12 h-12 rounded-full bg-blue-100 dark:bg-blue-700">
                                            <i class="fa-solid fa-user text-blue-600 dark:text-blue-200 text-lg"></i>
                                        </div>
                                        break;
                                }
                            </div>
                            <div class="ml-4 flex-1">
                                <p class="text-sm font-medium text-gray-900 dark:text-white">
                                    @i.Message
                                </p>
                                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                    @DateTimeHelper.ConvertToTurkeyTime(i.CreateDate).ToString("dd MMM yyyy HH:mm")
                                </p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-sm text-gray-500 dark:text-gray-300">Henüz aktivite bulunmuyor.</p>
                }
            </div>
        </div>
    </div>
</div> 