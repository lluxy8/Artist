@model SettingUpdateDto
@{
    ViewData["Title"] = "Ayarlar";
    Layout = "_AdminLayout";
}

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800 dark:text-white">Ayarlar</h1>
        <p class="text-gray-600 dark:text-gray-400 mt-2">Site ayarlarını düzenleyin.</p>
    </div>

    <form asp-action="Index" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
        <input type="hidden" asp-for="Id" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="group">
                <label asp-for="CompanyName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">Şirket Adı</label>
                <div class="relative mt-1">
                    <input asp-for="CompanyName" class="block w-full border border-gray-300 dark:border-gray-600 rounded-lg py-2.5 px-4
                        bg-white dark:bg-gray-700 text-gray-900 dark:text-white
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 dark:placeholder-gray-500 text-sm
                        shadow-sm" />
                    <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
                </div>
                <span asp-validation-for="CompanyName" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="group">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">E-posta</label>
                <div class="relative mt-1">
                    <input asp-for="Email" type="email" class="block w-full border border-gray-300 dark:border-gray-600 rounded-lg py-2.5 px-4
                        bg-white dark:bg-gray-700 text-gray-900 dark:text-white
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 dark:placeholder-gray-500 text-sm
                        shadow-sm" />
                    <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
                </div>
                <span asp-validation-for="Email" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="group">
                <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">Telefon</label>
                <div class="relative mt-1">
                    <input asp-for="PhoneNumber" class="block w-full border border-gray-300 dark:border-gray-600 rounded-lg py-2.5 px-4
                        bg-white dark:bg-gray-700 text-gray-900 dark:text-white
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 dark:placeholder-gray-500 text-sm
                        shadow-sm" />
                    <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
                </div>
                <span asp-validation-for="PhoneNumber" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="group">
                <label asp-for="Address" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">Adres</label>
                <div class="relative mt-1">
                    <textarea asp-for="Address" rows="3" class="block w-full border border-gray-300 dark:border-gray-600 rounded-lg py-2.5 px-4
                        bg-white dark:bg-gray-700 text-gray-900 dark:text-white
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 dark:placeholder-gray-500 text-sm
                        shadow-sm"></textarea>
                    <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
                </div>
                <span asp-validation-for="Address" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="group">
                <label asp-for="AddressGoogleMaps" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">Google Maps Adresi</label>
                <div class="relative mt-1">
                    <input asp-for="AddressGoogleMaps" class="block w-full border border-gray-300 dark:border-gray-600 rounded-lg py-2.5 px-4
                        bg-white dark:bg-gray-700 text-gray-900 dark:text-white
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 dark:placeholder-gray-500 text-sm
                        shadow-sm" />
                    <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
                </div>
                <span asp-validation-for="AddressGoogleMaps" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="group">
                <label asp-for="DoneProjectsCount" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">Tamamlanan Proje Sayısı</label>
                <div class="relative mt-1">
                    <input asp-for="DoneProjectsCount" class="block w-full border border-gray-300 dark:border-gray-600 rounded-lg py-2.5 px-4
                        bg-white dark:bg-gray-700 text-gray-900 dark:text-white
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 dark:placeholder-gray-500 text-sm
                        shadow-sm" />
                    <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
                </div>
                <span asp-validation-for="DoneProjectsCount" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="group">
                <label asp-for="DoneCustomerCount" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">Müşteri Sayısı</label>
                <div class="relative mt-1">
                    <input asp-for="DoneCustomerCount" class="block w-full border border-gray-300 dark:border-gray-600 rounded-lg py-2.5 px-4
                        bg-white dark:bg-gray-700 text-gray-900 dark:text-white
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 dark:placeholder-gray-500 text-sm
                        shadow-sm" />
                    <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
                </div>
                <span asp-validation-for="DoneCustomerCount" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="group">
                <label asp-for="ExperienceYear" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">Deneyim Yılı</label>
                <div class="relative mt-1">
                    <input asp-for="ExperienceYear" type="number" class="block w-full border border-gray-300 dark:border-gray-600 rounded-lg py-2.5 px-4
                        bg-white dark:bg-gray-700 text-gray-900 dark:text-white
                        focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500
                        hover:border-primary-400/70
                        transition-all duration-300 ease-in-out
                        placeholder-gray-400 dark:placeholder-gray-500 text-sm
                        shadow-sm" />
                    <div class="absolute inset-0 rounded-lg transition-all duration-300 ease-in-out pointer-events-none group-hover:ring-2 group-hover:ring-primary-500/20"></div>
                </div>
                <span asp-validation-for="ExperienceYear" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>

        <div class="mt-6">
            <div class="group hidden">
                <label asp-for="Image" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">Logo</label>
                <div class="mt-1 flex items-center">
                    @if (!string.IsNullOrEmpty(Model.LogoUrl))
                    {
                        <img src="@Model.LogoUrl" alt="Logo" class="h-20 w-20 object-cover rounded-lg shadow-sm mr-4 transition-transform duration-300 hover:scale-105" />
                    }
                    <div class="flex-1">
                        <input type="file" asp-for="Image" class="block w-full text-sm text-gray-500 dark:text-gray-300
                            file:mr-4 file:py-2.5 file:px-4 file:rounded-lg file:border-0
                            file:text-sm file:font-medium file:bg-primary-50 dark:file:bg-gray-700 file:text-primary-700
                            hover:file:bg-primary-100 file:cursor-pointer
                            file:transition-all file:duration-300 file:ease-in-out
                            file:shadow-sm
                            file:focus:outline-none file:focus:ring-2 file:focus:ring-primary-500/50" />
                    </div>
                </div>
                <span asp-validation-for="Image" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>
        
        <div class="mt-6">
            <div class="group">
                <label asp-for="Icon" class="block text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 transition-colors duration-200">İkon</label>
                <div class="mt-1 flex items-center">
                    <img src="~/favicon.ico" alt="Icon" class="h-20 w-20 object-cover rounded-lg shadow-sm mr-4 transition-transform duration-300 hover:scale-105"/>
                    <div class="flex-1">
                        <input type="file" asp-for="Icon" class="block w-full text-sm text-gray-500 dark:text-gray-300
                            file:mr-4 file:py-2.5 file:px-4 file:rounded-lg file:border-0
                            file:text-sm file:font-medium file:bg-primary-50 dark:file:bg-gray-700 file:text-primary-700
                            hover:file:bg-primary-100 file:cursor-pointer
                            file:transition-all file:duration-300 file:ease-in-out
                            file:shadow-sm
                            file:focus:outline-none file:focus:ring-2 file:focus:ring-primary-500/50"/>
                    </div>
                </div>
                <span asp-validation-for="Icon" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>

        <div class="mt-6 flex justify-end space-x-3">
            <button type="submit" class="inline-flex items-center px-4 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-primary-600
                hover:bg-primary-700 hover:shadow-md
                focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
